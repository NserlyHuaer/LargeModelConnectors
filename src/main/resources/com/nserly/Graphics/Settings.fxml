                  <columnConstraints>
                     <ColumnConstraints />
                     <ColumnConstraints />
                     <ColumnConstraints halignment="CENTER" minWidth="10.0" prefWidth="100.0" />
                     <ColumnConstraints halignment="CENTER" minWidth="10.0" prefWidth="100.0" />
                     <ColumnConstraints halignment="CENTER" minWidth="10.0" prefWidth="100.0" />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                  </GridPane>
              </TitledPane>
      
              <!-- 操作按钮 -->
              <HBox alignment="CENTER_RIGHT" spacing="20" VBox.vgrow="NEVER">
               <Button fx:id="setDefaultSettingsButton" mnemonicParsing="false" text="恢复默认设置" HBox.hgrow="NEVER" />
                  <Button fx:id="setCurrentSettingsButton" styleClass="form-btn secondary" text="恢复当前设置" HBox.hgrow="NEVER" />
                  <Button fx:id="SaveSettingsButton" styleClass="form-btn primary" text="保存设置" HBox.hgrow="NEVER" />
              </HBox>
          </VBox>
      </center>
      <top>
         <GridPane prefHeight="36.0" prefWidth="1027.0">
            <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" maxWidth="1027.0" minWidth="10.0" prefWidth="589.0" />
